#include<iostream>
using namespace std;

//Creating function
int linearSearch(int a[], int size, int target){
    int i=0;
    for(i=0;i<size;i++){
        if(a[i]==target){
            return i;
        }
    }
    return -1;
}

//Main function
int main(){
    //getting input from user
    int size=0;
    cout<<"Enter the size of array: ";
    cin>>size;
    int array[size];
    cout<<"Enter the elements: ";
    for(int i=0;i<size;i++){
        cin>>array[i];
    }
    //using for loop
    int target;
    cout<<"Enter the target: ";
    cin>>target;
    //using function
    int index=linearSearch(array,size,target);
    //cout<<"Index: "<<index<<endl;
    //using if else statement
    if(index==1){
        cout<<"Not found";
    }else{
        cout<<"Found: "<<index<<endl;
    }
    
    //using for loop
//     for(i=0;i<5;i++){  
//         if(array[i]==target){
//            // cout<<"Found on Index: "<<i<<endl;
//            // return 0;
//            break;
//         }
//    }

  //without for loop
   // if(i<5)  
    //cout<<"target found on index: "<<i<<endl;
    //else
    //cout<<"target not found"<<endl;

     //using ternary operator
    //i==5?cout<<"target not found"<<endl:cout<<"target found on index: "<<i<<endl;
   
    return 0;
}
