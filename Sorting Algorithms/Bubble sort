//Bubble sort in c++
#include<iostream>
using namespace std;    

int main(){
    cout<<"Enter size of array: ";
    int size;
    cin>>size;

    int array[size];
    for(int i=0;i<size;i++){
        cout<<"Enter the array element: ";
        cin>>array[i];
    }

    bool flag=false;
    for(int pass=0; pass<size;pass++){  //loop for path
        for(int ele=0;ele<size-1-pass;ele++){  //loop for comparing elements
           if(array[ele]>array[ele+1]){   //comparing
            //using 3rd variable to swap the elements
            int temp=array[ele];          
            array[ele]=array[ele+1];
            array[ele+1]=temp;
            flag=true; 

           }
           }
           if(!flag) break;
        }
        cout<<"The sorted array is: ";
        for(int i=0;i<size;i++){
            cout<<array[i]<<" ";
        }
        return 0;
    }


